<h1>Edit Song Form </h1>

<%= form_for(@song) do |f| %>
     <%= f.label :name %><br>
     <%= f.text_field :name %><br>
     <br>
     <%= f.label :artist_id %><br>
     <%= f.collection_select :artist_id, Artist.all, :id, :name %><br>
     <%# <%= f.text_field :artist_id  //This only shows the artist_id number, not name.  %>
     <br>
     <%= f.label :genre_id %><br>
     <%= f.collection_select :genre_id, Genre.all, :id, :name %><br>
     <%# <%= f.text_field :genre_id<br> //This only shows the artist_id number, not name. %> 
     <br>
     <%= f.submit %>
<% end %>